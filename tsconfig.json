{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": [
    "src/renderer/**/*/*.ts",
    "src/renderer/**/*/*.d.ts",
    "src/renderer/**/*/*.tsx",
    "src/renderer/*.ts",
    "src/renderer/*.d.ts",
    "src/renderer/*.tsx",
    "src/preload/**/*/*.ts",
    "src/preload/**/*/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
