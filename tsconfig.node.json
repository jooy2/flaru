{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "composite": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["package.json", "src/main/**/*/*.ts", "src/main/**/*/*.d.ts"]
}
